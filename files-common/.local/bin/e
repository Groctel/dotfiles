#!/bin/sh

explorer="ranger"

path="$1"

! [ -d "$path" ] &&
{
	path="$(echo "$1" | tr '[:upper:]' '[:lower:]')"

	case "$path" in
	aur)
		path="$HOME/Documents/AUR"
	;;
	conf)
		path="$HOME/.config"
	;;
	cube)
		path="$HOME/Documents/Programación/cgpn/"
	;;
	d|doc)
		path="$HOME/Documents"
	;;
	dot)
		path="$HOME/Documents/Personal/dotfiles"
	;;
	dw|down)
		path="$HOME/Downloads"
	;;
	lab)
		path="$HOME/Documents/Laboral"
	;;
	m|mus)
		path="$HOME/Music"
	;;
	p|pic)
		path="$HOME/Pictures"
	;;
	pr|prog)
		path="$HOME/Documents/Programación"
	;;
	t|tel)
		path="$HOME/Downloads/Telegram Desktop"
	;;
	ui)
		path="$HOME/Documents/UGR/ugr-informatica"
	;;
	v|vid)
		path="$HOME/Videos"
	;;
	vim)
		path="$HOME/.config/nvim"
	;;
	yt)
		path="$HOME/Documents/Proyectos/YouTube"
	;;
	esac
}

$explorer "$path"
